{
  "name": "breakcube",
  "version": "1.0.0",
  "description": "BreakCube desktop app using Electron",
  "main": "main.js",
  "author": "BreakCube Team",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.breakcube.app",
    "productName": "BreakCube",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "extraResources": [
      "videos"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "electron": "^28.2.2",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "serialport": "^13.0.0"
  }
}
